/* 搜索区域  */

.flex-header {
  display: flex;
  line-height: 100rpx;
  height: 100rpx;
  background-color: #2192d0;
  padding: 0 21rpx 0 36rpx;
  font-size: 30rpx;
  color: #fff;
}

.flex-left {
  width: 148rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  background-color: #ffffff;
  color: #5b5b5b;
  margin-top: 20rpx;
  border-radius: 30rpx;
}

.search,
.inputsearch,
.clear {
  flex-direction: row;
}

.inputsearch {
  padding-top: 5rpx;
  color: #000000;
}

.search,
.clear {
  position: relative;
  top: 15rpx;
}

.flex-right {
  width: 429rpx;
  margin: 21rpx 96rpx 21rpx 0;
  box-sizing: border-box;
  border-radius: 40rpx;
  background: #fff;
  display: flex;
}

.search,
.clear {
  margin: 0 20rpx;
}

.search {
  width: 31rpx;
  height: 33rpx;
}

.clear {
  width: 30rpx;
  height: 30rpx;
}
.arr-down {
  width: 34rpx;
  height: 18rpx;
}
/*tab切换  */

.flex-tab {
  display: flex;
  color: #2192d0;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
}

.public {
  flex: 1;
  border: solid 1px #d3d3d3;
  box-sizing: border-box;
}

.private {
  flex: 1;
  border: solid 1px #d3d3d3;
  box-sizing: border-box;
}

.current {
  background-color: #2192d0;
  color: #ffffff;
}

.type-container {
  width: 90%;
  height: 68rpx;
  background-color: #fff;
  overflow: hidden;
  display: inline-block;
}
.add {
  width: 10%;
  line-height: 64rpx;
  overflow: hidden;
  display: inline-block;
  font-size: 66rpx;
  text-align: center;
  position: relative;
  left: -3rpx;
  top: -2rpx;
  border-bottom: solid 2rpx #d3d3d3;
}
.type-navbar {
  white-space: nowrap;
  height: 68rpx;
  width: 100%;
  background-color: #fff;
}
.type-box {
  width: 165rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 64rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item {
  border-bottom: 2rpx solid #d3d3d3;
  border-right: 2rpx solid #d3d3d3;
}
.type-box:last-child {
  border-right: none;
}

